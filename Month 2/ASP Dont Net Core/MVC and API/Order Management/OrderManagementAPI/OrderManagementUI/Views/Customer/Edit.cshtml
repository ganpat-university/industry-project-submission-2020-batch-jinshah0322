@model string
@using Newtonsoft.Json;

@{
    dynamic employee = JsonConvert.DeserializeObject(Model);
    string createMessage = TempData["Edit"] as string;
}

<h1 class="mb-4 text-center">Edit Customer</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(createMessage))
                    {
                        <div class="alert alert-danger mb-4" role="alert">
                            @createMessage
                        </div>
                    }
                    <form method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="@employee.name">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="@employee.email">
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" name="address" value="@employee.address">
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary me-2">Save</button>
                            <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
