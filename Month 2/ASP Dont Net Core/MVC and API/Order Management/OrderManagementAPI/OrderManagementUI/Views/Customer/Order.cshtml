@model string
@using Newtonsoft.Json;

<h1 class="text-center">Orders</h1>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in JsonConvert.DeserializeObject<dynamic>(Model))
            {
                <tr>
                    <td>@item.orderDate</td>
                    <td>@item.totalAmount</td>
                    <td>@item.status</td>
                    @{
                        int orderID = item.orderId;
                    }
                    @if (item.status == "Delivered")
                    {
                        <td>
                            <a href="@Url.Action("Details", "order", new { id = item.orderId })" class="btn btn-primary" disabled>Details</a>
                            <button type="button" class="btn btn-success" disabled onclick="return false;">Edit</button>
                            <button type="button" class="btn btn-danger" disabled onclick="return false;">Delete</button>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a href="@Url.Action("Details", "order", new { id = item.orderId })" class="btn btn-primary">Details</a>
                            <a href="@Url.Action("Edit", "order", new { id = item.orderId })" class="btn btn-success">Edit</a>
                            <a href="@Url.Action("Create", "OrderItem", new { customerId = TempData["CustomerId"],orderId=orderID })" class="btn btn-info">Add Order Items</a>
                            <a href="@Url.Action("Delete", "order", new { id = item.orderId })" class="btn btn-danger">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Order", new { id = TempData["CustomerId"] })" class="btn btn-primary">Add New</a>
    <a href="@Url.Action("Index", "Customer")" class="btn btn-danger">Home</a>
</div>