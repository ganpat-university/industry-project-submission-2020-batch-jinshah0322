@model int

@{
    var orderDate = DateTime.Now.ToString("yyyy-MM-dd");
    var totalAmount = "0";
    var status = "pending";
}

<h1 class="mb-4 text-center">Create Order</h1>
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <form id="createForm" method="post" action="@Url.Action("Create", "Order",new { id = Model })">
                        <div class="mb-3">
                            <label for="customerId" class="form-label">Customer Id</label>
                            <input type="text" class="form-control" id="customerId" name="customerId" value="@Model" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="orderDate" class="form-label">Order Date</label>
                            <input type="date" class="form-control" id="orderDate" name="orderDate" value="@orderDate" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="totalAmount" class="form-label">Total Amount</label>
                            <input type="number" class="form-control" id="totalAmount" name="totalAmount" value="@totalAmount" readonly>
                        </div>
                        <div class="mb-3" hidden>
                            <label for="totalAmount" class="form-label">Total Amount</label>
                            <input type="number" class="form-control" id="totalAmount" name="totalAmount" value="@status" readonly>
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="@Url.Action("Order", "Customer", new { id = Model })" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
