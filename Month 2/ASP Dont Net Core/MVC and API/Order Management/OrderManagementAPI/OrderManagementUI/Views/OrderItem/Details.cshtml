@model string
@using Newtonsoft.Json;

@{
    dynamic orderItem = JsonConvert.DeserializeObject(Model);
}

<h1 class="mb-4 text-center">OrderItem Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body text-left">
                    <div class="mb-3">
                        <strong>Order Id:</strong>
                        <span class="ms-2">@orderItem.orderId</span>
                    </div>
                    <div class="mb-3">
                        <strong>Product Id:</strong>
                        <span class="ms-2">@orderItem.productId</span>
                    </div>
                    <div class="mb-3">
                        <strong>Quantity:</strong>
                        <span class="ms-2">@orderItem.quantity</span>
                    </div>
                    <div class="mb-3">
                        <strong>Unit Price:</strong>
                        <span class="ms-2">@orderItem.unitPrice</span>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "OrderItem",new {id=@orderItem.orderId})" class="btn btn-primary me-2">Home</a>
                        <a href="@Url.Action("Edit", "OrderItem", new { id = @orderItem.orderItemId })" class="btn btn-danger">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
