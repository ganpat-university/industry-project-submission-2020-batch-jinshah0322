@model string
@using Newtonsoft.Json;

@{
    dynamic product = JsonConvert.DeserializeObject(Model);
    string createMessage = TempData["Edit"] as string;
}

<h1 class="mb-4 text-center">Edit Employee</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(createMessage))
                    {
                        <div class="alert alert-danger mb-4" role="alert">
                            @createMessage
                        </div>
                    }
                    <form method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="@product.name">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="description" name="description" value="@product.description">
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" class="form-control" id="price" name="price" value="@product.price">
                        </div>
                        <div class="mb-3">
                            <label for="stockQuantity" class="form-label">Stock Quantity</label>
                            <input type="number" class="form-control" id="stockQuantity" name="stockQuantity" value="@product.stockQuantity">
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary me-2">Save</button>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
