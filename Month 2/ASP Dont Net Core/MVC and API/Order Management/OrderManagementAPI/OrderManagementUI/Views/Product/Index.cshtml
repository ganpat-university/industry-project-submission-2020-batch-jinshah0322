@model string
@using Newtonsoft.Json;

<h1 class="text-center">Products</h1>
<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Add New</a>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th hidden>Product ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>StockQuantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in JsonConvert.DeserializeObject<dynamic>(Model))
            {
                <tr>
                    <td hidden>@item.productId</td>
                    <td>@item.name</td>
                    <td>@item.description</td>
                    <td>@item.price</td>
                    <td>@item.stockQuantity</td>
                    <td>
                        <a href="@Url.Action("Details", "Product", new { id = item.productId })" class="btn btn-primary">Details</a>
                        <a href="@Url.Action("Edit", "Product", new { id = item.productId })" class="btn btn-success">Edit</a>
                        <button onclick="confirmDelete('@item.productId')" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete(productId) {
        if (confirm("Are you sure you want to delete this Product?")) {
            window.location.href = '@Url.Action("Delete", "Product")' + '?id=' + productId;
        }
    }
</script>