@model string
@using Newtonsoft.Json;

<h1 class="text-center">Filtered Products</h1>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in JsonConvert.DeserializeObject<dynamic>(Model))
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.StockQuantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>
